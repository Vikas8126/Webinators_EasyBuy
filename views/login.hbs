<form class="modal-content animate" name="loginForm" action="login" method="post">
    <div class="imgcontainer">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    <img src="/public/image/profile.png" alt="Avatar" class="avatar1">
    </div>
    <div class="login_container">
    <label for="uname" ><b>Username</b></label>
    <input type="text" id="name" placeholder="Enter Username" name="name" required>

    <label for="email" ><b>Email</b></label>
    <input type="email" id="email" placeholder="Enter Email" name="email" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" id ="password" required>
        
    <button type="submit" value="login" onclick="login()">Login</button>
    <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
    </label>
    </div>
    <div class="login_container" style="background-color:#f1f1f1">
