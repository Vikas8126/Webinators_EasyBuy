    <title>Document</title>
    <script>
        function login(){
            var loggedinUser = document.getElementById("name").value
            var loggedEmail = document.getElementById("email").value
            localStorage.setItem("uname", loggedinUser)
            localStorage.setItem("email", loggedEmail)
            const cartName = "cartitem"+localStorage.getItem('email')
            const cartCount = localStorage.getItem(cartName)
            if(cartCount){
                document.getElementById("cartProCount").innerHTML = cartCount
            }else{
                document.getElementById("cartProCount").innerHTML = 0
            }
            
        }
    </script>
</head>
<body>
    <div class="fixed-header">
            <nav>
                <p1>Easy Buy</p1>
                <a href="home">Home</a>
                <a href="laptop">Laptops</a>
